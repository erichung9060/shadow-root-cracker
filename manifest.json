{
    "name": "ShadowRootCracker",
    "description": "Reload shadow-root(closed) on web pages as shadow-root(open)",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://example.com/*"
            ],
            "run_at": "document_start",
            "all_frames": true,
            "js": [
                "shadowInject.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injected.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}